<main class="container2">
  <div class="item-list inner">

    <div class="row">
      <div class="new col-md-12 col-sm-12 col-xs-12">
        <div class="item-inner2">
          <!--這段是比賽資訊-->
          <% if @news2.category =="比賽資訊"%>
          <button class="pure-button button-warning"><%= @news2.category %></button>

          <% if current_user == @news2.user %>
          <%= link_to '修改文章', edit_news2_path(@news2), class:"pure-button button-edit navbar-right" %>
          <% end %>

          <div class="item-title2"><%= @news2.title%></div>
          <div class="item-content"><%= raw @news2.content %></div>

          <!--這段是釣蝦新聞-->
          <% elsif @news2.category =="釣蝦新聞" %>
          <button class="pure-button button-success"><%= @news2.category %></button>

          <% if current_user == @news2.user %>
          <%= link_to '修改文章', edit_news2_path(@news2), class:"btn button-edit navbar-right" %>
          <% end %>

          <div class="item-title2"><%= @news2.title%></div>
          <div class="item-content"><%= raw @news2.content %></div>

          <!--這段是蝦場活動-->
          <% elsif @news2.category =="蝦場活動" %>
          <button class="button-error pure-button">蝦場活動</button>

          <% if current_user == @news2.user %>
          <%= link_to '修改文章', edit_news2_path(@news2), class:"btn button-edit navbar-right" %>
          <% end %>

          <div class="item-title"><%= @news2.title%></div>
          <div class="item-content"><%= raw @news2.content %></div>

          <% end %>
        </div>

        <div class="item-commentbox">
          <%= render 'newscomments/form' %>
        </div>



<% @newscomments.each do |post| %>
<div class="item-comment">

    <div class="item-comment-logo"><img src="<%= post.user.image %>"></div>
    <div class="item-comment-user">
      <div class="item-comment-name">Alex Guo</div>
      <div class="item-comment-createdat"><%= post.created_at.strftime("%m-%d %H:%M") %></div>
    </div>
    <div class="item-comment-content"><%= simple_format(post.content) %></div>



</div>
<% end %>

      </div>
    </div>

  </div>
</main>
